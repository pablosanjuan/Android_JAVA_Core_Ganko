<ScrollView
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ecf0f1"
    tools:context="com.example.pablosanjuan.core.RegistrarVacuna1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/add"
            android:id="@+id/foto_bovino_pv"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_id_pv"
                android:inputType="textCapSentences|textImeMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/edt_nombre_pv"
                android:inputType="textCapSentences|textImeMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Vacunacion:"
                 />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_fecha_pv"
                android:text="DD/MM/AAAA"
                android:onClick="onClick"
                android:gravity="left|center_vertical"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_siguiente_pv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:background="#1abc9c"
        android:onClick="onClick"
        android:layout_gravity="right" />

</LinearLayout>
</ScrollView>
